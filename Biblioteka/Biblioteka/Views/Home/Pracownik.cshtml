@model Biblioteka.Models.Pracownik
@{
    ViewBag.Title = "Pracownik";
}

<h2>Załóż konto</h2>

<div>
    <div id="inner">
        @using (Html.BeginForm("Pracownik", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Pracownik</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.imie_p, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.imie_p, new { htmlAttributes = new { @class = "form-control", placeholder = "Podaj imię" } })
                    @Html.ValidationMessageFor(model => model.imie_p, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.nazwisko_p, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nazwisko_p, new { htmlAttributes = new { @class = "form-control", placeholder = "Podaj nazwisko" } })
                    @Html.ValidationMessageFor(model => model.nazwisko_p, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.email_p, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.email_p, new { htmlAttributes = new { @class = "form-control", placeholder = "Podaj email" } })
                    @Html.ValidationMessageFor(model => model.email_p, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.login_p, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.login_p, new { htmlAttributes = new { @class = "form-control", placeholder = "Podaj login" } })
                    @Html.ValidationMessageFor(model => model.login_p, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.password_p, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.password_p, new { htmlAttributes = new { @class = "form-control", placeholder = "Podaj hasło" } })
                    @Html.ValidationMessageFor(model => model.password_p, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.confirmedpassword_p, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.confirmedpassword_p, new { htmlAttributes = new { @class = "form-control", placeholder = "Potwierdź hasło" } })
                    @Html.ValidationMessageFor(model => model.confirmedpassword_p, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Stwórz" class="btn btn-default" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @ViewBag.Succesmessage
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @ViewBag.DuplicateMessage
                </div>
            </div>
        </div>
        }
    </div>
</div>
<div>
    @Html.ActionLink("Wróć", "Index", null, new { @class = "backtolist" })
</div>
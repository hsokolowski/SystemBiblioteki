@model Biblioteka.Models.Account
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<hr/>
<div style="margin-top:auto;">
    @using (Html.BeginForm("Login", "Home", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
    {
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", style = "width:200px;" } })
                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })

                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", style = "width:200px;" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    @ViewBag.LoginErrorMessage
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Zaloguj" class="btn btn-default" />
                    <input type="reset" value="Resetuj" class="btn btn-default" />
                </td>
            </tr>
        </table>
            @TempData["Message"]
    }
</div>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Biblioteka</title>
    <link rel="stylesheet" href="~/Content/StyleSheet.css">
    <link rel="stylesheet" href="~/Content/fontello/css/basket.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700&amp;subset=latin-ext" rel="stylesheet">

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/JavaScript.js"></script>
    <!--validacja-->
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>


</head>
<body>
    <header>

        <nav class="navbar bg-dark navbar-dark  navbar-expand-lg ">

           
            <button class="navbar-toggler navbartext" type="button" data-toggle="collapse" data-target="#mainmenu" aria-controls="mainmenu" aria-expanded="false" aria-label="Przełącznik nawigacji">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainmenu">

                <ul class="navbar-nav mr-auto">

                    <li class="nav-link">
                        @Html.ActionLink("Biblioteka", "Index", "Home", new { area = "" } , new { @class = "navbartext"  })
                    </li>
                    <li class="nav-link">
                        @Html.ActionLink("Dodaj kategorie", "Dodaj_kategorie", "Home", new { area = "" } , new { @class = "navbartext" })
                    </li>
                    <li class="nav-link">
                        @Html.ActionLink("Lista Kategori", "Kategorie", "Home", new { area = "" } , new { @class = "navbartext" })
                    </li>
                    <li class="nav-link">
                        @Html.ActionLink("Ksiązki", "Ksiazki", "Home", new { area = "" } , new { @class = "navbartext" })
                    </li>
                </ul>

                <form class="form-inline">

                    <input class="form-control mr-1" type="search" placeholder="Wyszukaj" aria-label="Wyszukaj">
                    <button class="btn btn-light" type="submit">Znajdź</button>
  
                </form>
                <ul class="navbar-nav navbar-right">


                    @if (Session["login"] == null)
                    {
                        <li class="nav-link">
                            @Html.ActionLink("Załóż konto", "Konto", "Home", new { area = "" }, new { @class = "navbartext" })
                        </li>


                        <li class="nav-link ">
                           @Html.ActionLink("Zaloguj", "Login", "Home", new { area = "" }, new { @class = "navbartext icon-login" })
                        </li>

                    }
                    <li class="nav-link icon-user">
                        
                        @if (Session["login"] != null)
                        {@Session["login"].ToString()}
                    </li>




                    @if (Session["login"] != null)
                    {
                        <li class="nav-link ">
                            <a class="navbartext icon-logout" href="@Url.Action("Logout","Home")">Wyloguj</a>

                        </li>

                    }

                    @if (Session["login"] != null)
                    {
                        <li class="nav-link">
                       
                        @Html.ActionLink("Koszyk", "Koszyk", "Home", new { area = "" }, new { @class = "navbartext icon-basket" })

                        </li>


                        <li class="nav-link">
                            <a class="navbartext" href="/Home/Koszyk">

                                @if (Session["login"] != null)
                                {
                                    @Session["Licznik"].ToString();
                                }

                            </a>
                        </li>
                    }
                </ul>

            </div>

        </nav>
        <div  id="newsfeed">
            TU COŚ BĘDZIE NEWSY BĘDĄ 
        </div>
    </header>



    <main>
        <div class="container ">

            @RenderBody()
        </div>
    </main>
    <footer>      

        <div class="info">
            Wszelkie prawa zastrzeżone <a style="text-decoration:none; color: black;" href="/Home/Admin">&copy;</a> @DateTime.Now.Year - System Biblioteki
        </div>

    </footer>

















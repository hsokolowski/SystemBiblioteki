            <div id="main">
               @Html.Partial("_HeaderNavBar", Session["login"])


                <div class="container body-content">

                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - System Biblioteki</p>
                    </footer>
                </div>
            </div>
        </div>*@

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>